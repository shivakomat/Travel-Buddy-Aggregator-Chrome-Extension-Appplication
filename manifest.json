{
  "name": "TravelBuddyChromeExtension",

  "description": "Aggregates Travel Information",

  "version": "1.0.0",

  "manifest_version": 2,

  "icons": { "128": "temp_logo.png" },

  "browser_action": {
    "default_icon": "temp_logo.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [ {
    "js": [ "js/lib/jquery-1.8.2.min.js", "js/app/content.js" ],
    "matches": [ "*://*/*" ],
    "run_at": "document_start"
  } ],

  "permissions": [ "http://*/*", "https://*/*", "unlimitedStorage", "contextMenus", "cookies", "tabs", "notifications", "activeTab" ]
}
